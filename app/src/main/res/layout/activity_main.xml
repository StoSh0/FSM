<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.stosh.fsm.Main">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/allUnlocked"
        android:orientation="horizontal"
        android:background="@drawable/selector_all_unlocked" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/driverUnlocked"
        android:orientation="horizontal"
        android:background="@drawable/selector_driver_unlocked" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/allLocked"
        android:orientation="vertical"
        android:background="@drawable/selector_all_locked"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <CheckBox
            android:id="@+id/statusAlarm"
            android:layout_width="177dp"
            android:layout_height="wrap_content"
            android:text="Alarm Armed"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_margin="30dp"
            android:clickable="false"/>

        <TextView
            android:id="@+id/statusDoor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:layout_gravity="center"
            android:gravity="center"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="8dp"
            android:layout_margin="10dp">

            <Button
                android:id="@+id/btnLock"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="LOCK"
                android:textAllCaps="false"/>

            <Button
                android:id="@+id/btnUnlock"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="UNLOCK"
                android:textAllCaps="false"/>

            <Button
                android:id="@+id/btnLockX2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="LOCKx2"
                android:textAllCaps="false"/>

            <Button
                android:id="@+id/btnUnlockX2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="UNLOCKx2"
                android:textAllCaps="false"/>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
